<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textview_name"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/textview_description"
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textview_name"
        android:layout_alignLeft="@+id/textview_name"
        android:layout_alignStart="@+id/textview_name" />

    <TextView
        android:id="@+id/textView_region"
        android:text="region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_description"
        android:layout_alignLeft="@+id/textview_description"
        android:layout_alignStart="@+id/textview_description"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textview_type"
        android:text="type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_description"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_above="@+id/button_shopping"
        android:layout_alignRight="@+id/button_shopping"
        android:layout_alignEnd="@+id/button_shopping" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/domaine_de_la_romanee_conti_romanee_conti_grand_cru_cote_de_nuits_france_10607921"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shopping_cart_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Wine List"
        android:id="@+id/button_back"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/region"
        android:layout_alignStart="@+id/region" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:id="@+id/button_buy"
        android:layout_below="@+id/ratingBar"
        android:layout_toRightOf="@+id/button_back"
        android:layout_toEndOf="@+id/button_back" />


</RelativeLayout>
