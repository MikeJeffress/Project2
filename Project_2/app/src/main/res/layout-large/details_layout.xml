<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:id="@+id/textview_name"
        android:text="name"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textview_description"
        android:text="description"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_region_text"
        android:text="@string/region_details"
        android:textSize="15dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_description"
        android:layout_toLeftOf="@+id/textView_region"
        android:layout_toStartOf="@+id/textView_region" />

    <TextView
        android:id="@+id/textView_region"
        android:text="region"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_description"
        android:layout_alignRight="@+id/textView_price_details"
        android:layout_alignEnd="@+id/textView_price_details" />

    <TextView
        android:id="@+id/textView_price_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="25dp"
        android:layout_above="@+id/textView_region"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textview_type_text"
        android:text="Type: "
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_description"
        android:layout_alignLeft="@+id/textview_name"
        android:layout_alignStart="@+id/textview_name" />

    <TextView
        android:id="@+id/textview_type"
        android:text="type"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_type_text"
        android:layout_toRightOf="@+id/textview_type_text"
        android:layout_toEndOf="@+id/textview_type_text" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_above="@+id/button_buy"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/wine_bottle_placeholder"
        android:scaleY="2"
        android:scaleX="2"
        android:layout_marginTop="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shopping_cart_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_wine_list"
        android:id="@+id/button_back"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_cart"
        android:id="@+id/button_buy"
        android:layout_above="@+id/button_shopping"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
