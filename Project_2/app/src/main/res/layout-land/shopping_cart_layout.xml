<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/winebackground_ls_bar"
        android:layout_marginTop="-3dp"/>

    <ListView
        android:id="@+id/listview_shopping"
        android:text="name"
        android:textSize="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_back"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView3"
        android:layout_toLeftOf="@+id/textView3"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/textview_total_price"
        android:text="total price"
        android:textSize="25dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_wine_list"
        android:id="@+id/button_back"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/purchase"
        android:id="@+id/button_buy"
        android:layout_below="@+id/textview_total_price"
        android:layout_alignLeft="@+id/textview_total_price"
        android:layout_alignStart="@+id/textview_total_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/wine_o_rama"
        android:textSize="50dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="@string/total_price"
        android:id="@+id/textView3"
        android:paddingRight="10dp"
        android:layout_above="@+id/textview_total_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
